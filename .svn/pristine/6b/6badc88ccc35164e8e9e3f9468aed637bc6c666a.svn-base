                @Html.ValidationMessageFor(model => model.permiso)
            </div>*@

            <div class="col-sm-3">
                @Html.LabelFor(model => model.estadoActivo)
                @Html.TextBoxFor(model => model.estadoActivo, new { @class = "form-control input-lg", @autocomplete = "off" })
