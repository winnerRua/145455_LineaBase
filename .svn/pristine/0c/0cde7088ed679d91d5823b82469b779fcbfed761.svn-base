using System;
using System.Collections.Generic;
using System.ComponentModel.DataAnnotations;
using System.Linq;
using System.Web;

namespace WAREGBOGWMM.Models
{
    public class Permiso
    {
        [Display(Name = "Nombre de permiso")]
        [Required(ErrorMessage = "Descripción de permiso es requerido.")]
        public string nombrePermiso { get; set; }

        [Display(Name = "Icono permiso")]
        [Required(ErrorMessage = "Debe seleccionar un ícono para el permiso a crear.")]
        public string iconoPermiso { get; set; }

        [Display(Name = "Estado de permiso")]
        [Required(ErrorMessage = "Estado de permiso es requerido.")]
        public string estadoActivo { get; set; }

        [Display(Name = "Descripción de permiso")]
        [Required(ErrorMessage = "Descripción de permiso requerido.")]
        public string descripcionPermiso { get; set; }

        [Display(Name = "Ruta de permiso")]
        [Required(ErrorMessage = "Ruta de permiso es requerida.")]
        public string routerPagina { get; set; }

        [Display(Name = "Código de permiso")]
        [Required(ErrorMessage = "Código de permiso es requerido.")]
        public string permisoID { get; set; }

        [Display(Name = "Código de referencia de permiso")]
        [Required(ErrorMessage = "Código de referencia de permiso es requerido.")]
        public string permisorefID { get; set; }
    }
}